@model BEntity.SavingsTransactionEntity
@{
    ViewBag.Title = "DepositAmount";
    Layout = "~/Views/Shared/CustomerMasterPage.cshtml";
    <link href="~/content/login.css" rel="stylesheet" type="text/css" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

}
<div id="h">
    <h1 style="font-weight:bold">Deposit Page</h1>



<div class="container h-80">
    <div class="row align-items-center h-100">
        <div class="col-3 mx-auto">
            <div class="text-center">
                
                <div id="h">
                    <form method="post">
                        <input type="text" name="AccountId" id="uname" class="form-control form-group" placeholder="Enter AccountId" required autofocus>
                        @Html.ValidationMessageFor(s => s.AccountId)
                        <input type="text" name="Amount" id="uname" class="form-control form-group" placeholder="Enter Amount" required autofocus>
                        <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Deposit</button>
                    </form>
                    <b> @ViewData["status"]  </b>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>
